{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@san-juan-store/types": ["../../packages/types/src"],
      "src/*": ["./*"]
    },
    "composite": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../../packages/types"
    }
  ]
}
